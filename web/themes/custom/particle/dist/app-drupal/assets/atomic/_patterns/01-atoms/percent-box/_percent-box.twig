{#
/**
 * @file
 * percent-box
 *
 * Available variables for percent-box:
 *  - percent_box.variable_name [variable_type]: Description of the variable. Example below.
 *  - percent_box.invert [bool]: When set, colors will be inverted for light display on dark background.
 */
#}

{% if shadow == true %}
  {% set shadow = "shadow-lg" %}
{% endif %}

{% if bold_title == true %}
  {% set bold = "font-bold" %}
{% endif %}

<div class="percent-box flex-grow border rounded m-5 p-5 {{ shadow }}">
  <div class="title mb-5 {{ bold }} text-gray-800">{{ title }}</div>
  {% if count %}
    <div class="percent text-3xl">{{ count|number_format(2, '.', ',') }}%</div>
  {% else %}
    No data to display ...
  {% endif %}
</div>
