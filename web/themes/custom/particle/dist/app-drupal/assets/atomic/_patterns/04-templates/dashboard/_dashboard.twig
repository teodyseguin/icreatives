<div class="dashboard layout-container">
  {{ primary_menu }}

  {{ highlighted }}

  <header role="banner">
    {{ header_branding }}
    {{ secondary_menu }}
  </header>

  {# Help Region not Included by Default. #}
  {{ help }}

  <main role="main">
    <a id="main-content" tabindex="-1"></a>{# link is in html.html.twig #}
    {{ breadcrumb }}
    <section class="row flex flex-row relative">

      <div class="layout-content w-full"> <!-- lg:w-5/6 -->
        <div class="top-details flex flex-wrap w-full justify-left lg:justify-end border-b border-gray-400 shadow-lg">
          {% include '@atoms/hamburger-menu/_hamburger-menu.twig' %}
          {% if display_filter %}
            <div class="filter flex flex-row flex-grow lg:ml-4">
              {% include '@atoms/selectbox/_selectbox.twig' with {
                "clients": clients
              } %}
              {% include '@atoms/button/_button.twig' with {
                "button": {
                  "text": "Select",
                  "text_color": "black",
                  "font_size": "text-xs",
                  "color": "white",
                  "hoverColor": false,
                  "additional_class": "my-4 border"
                }
              } %}
            </div>
          {% endif %}
          <div class="flex text-right mr-10 align-middle justify-center">
            {# <svg class="flex h-8 w-8 mt-4" viewBox="0 0 20 20" fill="#ccc" class="mail w-6 h-6"><path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path><path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path></svg> #}
            <div class="hidden md:block name inline-block ml-4 mr-4 mt-5">{{ full_name }}</div>
            <div class="hidden md:block overflow-hidden avatar inline-block h-10 w-10 bg-yelloworange rounded-full mt-3">
              <a href="/user/{{ user_id }}">
                {% if user_picture %}
                  <img src={{ file_url(user_picture) }} />
                {% endif %}
              </a>
            </div>
          </div>
        </div>

        <div class="flex">

          {% include '@organisms/aside/_aside.twig' with {
            "sidebar_first": sidebar_first
          } %}

          <!-- Date range widget -->
          <div class="w-5/6">
            {% if client %}
              <div class="flex w-full p-5">
                {% include '@molecules/date-range/_date-range.twig' %}
              </div>
            {% endif %}

            <!-- Facebook and Instagram followers count -->
            <div class="flex m-5">
              {% include '@molecules/follower-count-graph/_follower-count-graph.twig' with {
                title: 'Total Follower Count',
                fb_followers: page_insights['total_facebook_followers'],
                ig_followers: ig_insights['total_instagram_followers'],
                id: 'line'
              } %}
            </div>
            <!-- End of Facebook and Instagram followers count -->

            <!-- Total Reach, Engagement Rate, Link Clicks, Total Impressions -->
            <div class="flex flex-row m-5">
              <div class="w-1/2 mr-5">
                <section class="card">
                  <header class="card-header">Total Reach</header>
                  <div class="card-body flex flex-row">
                    <div class="flex-grow">
                      <div class="block font-bold">Facebook</div>
                      {{ page_insights['total_facebook_reach'] }}
                    </div>

                    <div class="flex-grow">
                      <div class="block font-bold">Instagram</div>
                      {{ ig_insights['reach'] }}
                    </div>
                  </div>
                </section>

                <section class="card">
                  <header class="card-header">Engagement Rate</header>
                  <div class="card-body flex flex-row">
                    <div class="flex-grow">
                      <div class="block font-bold">Facebook</div>
                      {{ engagement_rate }}
                    </div>

                    <div class="flex-grow">
                      <div class="block font-bold">Instagram</div>
                      {{ ig_insights['engagementRate'] }}
                    </div>
                  </div>
                </section>
              </div>

              <div class="w-1/2 ml-5">
                <section class="card">
                  <header class="card-header">Link Clicks</header>
                  <div class="card-body flex flex-row">
                    <div class="flex-grow">
                      <div class="block font-bold">Facebook</div>
                      {{ page_insights['link_clicks'] }}
                    </div>

                    <div class="flex-grow">
                      <div class="block font-bold">Instagram</div>
                      {{ ig_insights['link_clicks'] }}
                    </div>
                  </div>
                </section>

                <section class="card">
                  <header class="card-header">Total Impressions</header>
                  <div class="card-body flex flex-row">
                    <div class="flex-grow">
                      <div class="block font-bold">Facebook</div>
                      {{ page_insights['total_facebook_impressions'] }}
                    </div>

                    <div class="flex-grow">
                      <div class="block font-bold">Instagram</div>
                      {{ ig_insights['impressions'] }}
                    </div>
                  </div>
                </section>
              </div>
            </div>
            <!-- End of Total Reach, Engagement Rate, Link Clicks, Total Impressions -->

            <!-- Facebook and Instagram messages count -->
            <div class="flex flex-row flex-no-wrap mb-10">
              <div class="flex-grow">
                {% include '@molecules/messages-count/_messages-count.twig' with {
                  title: 'Facebook message count',
                  conversations: conversations
                } %}
              </div>

              <div class="flex-grow">
                {% include '@molecules/messages-count/_messages-count.twig' with {
                  title: 'Instagram message count',
                  conversations: ig_conversations
                } %}
              </div>
            </div>
            <!-- // End of Facebook and Instagram messages count -->

            <!-- Top 5 Contents -->
            <div class="flex flex-row m-5">
              <div class="card w-full">
                <header class="card-header">Top 5 Contents</header>
                <section class="card-body flex flex-row -mx-2">
                  {% include '@molecules/top-contents/_top-contents.twig' with {
                    contents: ig_insights['topFive']
                  } %}
                </section>
              </div>
            </div>
            <!-- // End of Top 5 Contents -->

            <!-- Facebook and Instagram audiences -->
            <div class="flex flex-row m-5">
              <div class="flex flex-wrap">
                <h4 class="flex w-full">Facebook audience</h4>
                <div class="flex w-full">
                  {% include '@molecules/doughnut-graph-box/_doughnut-graph-box.twig' with {
                    title: 'Gender and Age of Followers',
                    contents: page_insights['gender_age_followers'],
                    id: 'doughnut1',
                    additional_class: 'w-1/2'
                  } %}
  
                  {% include '@molecules/doughnut-graph-box/_doughnut-graph-box.twig' with {
