 *  - inbox.variable_name [variable_type]: Description of the variable. Example below.
 *  - inbox.invert [bool]: When set, colors will be inverted for light display on dark background.
 */
#}

<div class="generic layout-container" style="background-color: #f1f2f7;">
  {{ primary_menu }}

  {{ highlighted }}

  <header role="banner">
    {{ header_branding }}
    {{ secondary_menu }}
  </header>

  {# Help Region not Included by Default. #}
  {{ help }}

  <main role="main">
    <a id="main-content" tabindex="-1"></a>{# link is in html.html.twig #}
    {{ breadcrumb }}
    <section class="row flex flex-row relative">

      <div class="layout-content w-full">
        <div class="bg-white top-details flex flex-wrap w-full justify-left lg:justify-end">
          {% include '@atoms/hamburger-menu/_hamburger-menu.twig' %}

          {% include '@atoms/site-name/_site-name.twig' with {
            site_name: 'Imaginarium Creatives'
          } %}

          <div class="navbar-inbox-icon relative">
            <i class="fa fa-envelope-o"></i>
            <span class="badge badge-danger hidden"></span>
          </div>

          {% if display_filter %}
            <div class="filter flex flex-row flex-grow lg:ml-4">
              {% include '@atoms/selectbox/_selectbox.twig' with {
                "clients": clients
              } %}
              {% include '@atoms/button/_button.twig' with {
                "button": {
                  "text": "Select",
                  "text_color": "black",
                  "font_size": "text-xs",
                  "color": "white",
                  "hoverColor": false,
                  "additional_class": "my-4 border"
                }
              } %}
            </div>
          {% endif %}
          <div class="flex text-right mr-3 align-middle justify-center">
            <div class="hidden md:block overflow-hidden avatar inline-block bg-yelloworange rounded-full mt-4">
              <a href="/user/{{ user_id }}">
                {% if user_picture %}
                  <img src={{ file_url(user_picture) }} />
                {% endif %}
              </a>
            </div>
            <div class="hidden md:block name inline-block ml-4 mt-5">{{ full_name }}</div>
          </div>
        </div>

        <div class="flex">
          {% include '@organisms/aside/_aside.twig' with {
            "sidebar_first": sidebar_first
          } %}

          <div class="w-full lg:w-5/6">
            {{ content }}
          </div>
        </div>
      </div>
    </section>
  </main>
</div>
{# /.layout-container #}

{{ footer }}
